<div id="page-content">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center mb-5 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title"><%= @event.title %></h5>
                        <p class="card-text"><%= @event.description %></p>
                        <p class="card-text"><%= @event.date %></p>
                        <p class="card-text"><%= @event.time %></p>
                        <p class="card-text"><%= @event.venue %>, <%= @event.city %></p>
                        <p class="card-text"><%= @event.price %></p>


                        <%= link_to "Back", articles_path,class:"btn btn-outline-info"%>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(@event.created_at) %> ago,
                        Edited <%= time_ago_in_words(@event.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>