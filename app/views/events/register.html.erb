<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <h1 class="text-center mt-4">Registration For Event</h1>
    
            <%= form_with(model: @event, class: "shadow p-3 mb-3 bg-info rounded", method: :post, local: true) do |f| %>
                
                <div class="form-group row">
                    <p class= "col-2 col-form-label">no.of tikits </p>
                    <div class="col-10">
                        <%= f.number_field :tikits, class: "form-control shadow rounded",placeholder:"number of tikits" %>      
                    </div>      
                </div>                        
                
                <div class="form-group row justify-content-center">
                    <%=  f.submit class:"btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>

        <%= link_to '[ cancel and back to article list ]',articles_path%>
    </div>
</div>