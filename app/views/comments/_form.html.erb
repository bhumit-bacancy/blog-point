<%= render 'errors' %>
<%= form_with(model: @comment,class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %> 
            
    <div class="form-group row ">
        <%= f.label :description,class: "col-2 col-form-label" %>
        <div class="col-10">
            <%= f.text_area :description,rows: 10,class: "form-control shadow rounded",placeholder:"Description" %>      
        </div>      
    </div>

    <%= f.hidden_field :article_id, value: "#{params[:article_id]}" %>

    <div class="form-group row justify-content-center">
        <%=  f.submit class:"btn btn-outline-light btn-lg mr-1" %>
    </div>

<% end %>